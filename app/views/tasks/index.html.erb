<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %><p>
  <%= link_to 'Show', task_path(task) %>
  <%= link_to 'Edit', edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <%= link_to "Create", new_task_path(task) %>
<% end %>

